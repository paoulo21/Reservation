<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0" xsi:schemalocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="pu" transaction-type="RESOURCE_LOCAL">
    <class>POJO.Constraints</class>
    <class>POJO.Utilisateur</class>
    <class>POJO.Reservation</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>

      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
      <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="jakarta.persistence.schema-generation.scripts.create-target" value="creer.sql"/>
      <property name="jakarta.persistence.schema-generation.scripts.drop-target" value="detruire.sql"/>
      
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="jakarta.persistence.sql-load-script-source" value="data.sql"/>
    </properties>
  </persistence-unit>
</persistence>
